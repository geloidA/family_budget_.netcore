<Window x:Class="family_budget.Views.AuthorizationWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:family_budget.Views"
        xmlns:vm="clr-namespace:family_budget.ViewModels"
        mc:Ignorable="d"
        Title="AuthorizationWnd" Height="450" Width="800">
    <Window.DataContext>
        <vm:AuthorizetionViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <TextBox Text="{Binding Login}"/>
            <TextBox Text="{Binding Password}"/>
            <Button Command="{Binding AuthorizeUser}" Content="Авторизоваться"/>
        </StackPanel>
    </Grid>
</Window>
