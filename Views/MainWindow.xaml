<Window x:Class="family_budget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:family_budget"
        xmlns:vm="clr-namespace:family_budget.ViewModels"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWndViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="18"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Menu Background="Beige">
            <MenuItem Header="Войти" FontFamily="Inter" 
                      Command="{Binding OpenAuthorizationPresentation}"/>
            <MenuItem Name="userName" HorizontalAlignment="Left" FontFamily="Inter" Header="{Binding User.FullName}"/>
        </Menu>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <lvc:PieChart DisableAnimations="True" 
                              LegendLocation="Bottom"
                              Series="{Binding Incomes}"/>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="0.05*"/>
                    </Grid.RowDefinitions>
                    <lvc:PieChart DisableAnimations="True" 
                                  Grid.Column="1"
                                  Series="{Binding Expense}"
                                  LegendLocation="Bottom"/>
                    <Button Grid.Row="1" HorizontalAlignment="Right" Background="White" BorderBrush="White"
                            Command="{Binding OpenExpensesOverviewPresentation}">
                        <TextBlock Style="{StaticResource DefaultTextBlock}" Text="Подробнее" FontSize="12"/>
                    </Button>
                </Grid>
            </Grid>

            <Grid Grid.Column="1">                
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <StackPanel>
                    <Label Content="Последние действия" Style="{StaticResource DefaultLabel}" 
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"/>

                    <ListBox FontFamily="Inter"  x:Name="LastActions"/>
                </StackPanel>

                <StackPanel Grid.Row="1">
                    <Label Content="Личные траты:" Style="{StaticResource DefaultLabel}" 
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"/>

                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
